package com.item.tomatofarm;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.sun.jdi.connect.spi.Connection;

public class ItemDAO {
	private static Connection cn = DBConnection.getConnection();
	private static PreparedStatement pst;
	private static ResultSet rs;
	private static String sql;
	
	
	public List<ItemDTO> mealkitList() {
		sql = "SELECT * FROM mealkit";
		List<ItemDTO> list = new ArrayList<ItemDTO>();
		
		
		try {
			pst = cn.prepareStatement(sql);
			rs = pst.executeQuery(); 
			// => 결과의 존재여부 
			if (rs.next()) {
				do {
					ItemDTO dto = new ItemDTO();
					
					dto.setSorta(rs.getString(1));
					dto.setSortb(rs.getString(2));
					dto.setSortc(rs.getString(3));
					dto.setSortd(rs.getString(4));
					dto.setCode(rs.getInt(5));
					dto.setMadeby(rs.getString(6));
					dto.setName(rs.getString(7));
					dto.setSize(rs.getInt(8));
					dto.setStoragetype(rs.getString(9));
					dto.setPackagetype(rs.getString(10));
					dto.setPrice(rs.getInt(11));

					list.add(dto);
				} while (rs.next());
				return list;
			} else {
				return null;
			}
		} catch (Exception e) {
			System.out.println("** selectList Exception => " + e.toString());
			return null;
		}
		
		
	}
	
	public List<ItemDTO> listWhereMadeby(String madeby) {
		sql = "SELECT * FROM mealkit WHERE madeby = ?";
		if("전체".equals(madeby)) sql = "SELECT * FROM mealkit";
		List<ItemDTO> list = new ArrayList<ItemDTO>();
		
		
		
		try {
			
			pst = cn.prepareStatement(sql);
			if(!"전체".equals(madeby)) pst.setString(1, madeby);
			rs = pst.executeQuery(); 
			// => 결과의 존재여부 
			if (rs.next()) {
				do {
					ItemDTO dto = new ItemDTO();
					
					dto.setSorta(rs.getString(1));
					dto.setSortb(rs.getString(2));
					dto.setSortc(rs.getString(3));
					dto.setSortd(rs.getString(4));
					dto.setCode(rs.getInt(5));
					dto.setMadeby(rs.getString(6));
					dto.setName(rs.getString(7));
					dto.setSize(rs.getInt(8));
					dto.setStoragetype(rs.getString(9));
					dto.setPackagetype(rs.getString(10));
					dto.setPrice(rs.getInt(11));

					list.add(dto);
				} while (rs.next());
				return list;
			} else {
				return null;
			}
		} catch (Exception e) {
			System.out.println("** selectList Exception => " + e.toString());
			return null;
		}
		
		
	}
	
	
	public List<ItemDTO> listWhereName(String name) {
//		sql = "SELECT * FROM mealkit WHERE name LIKE %?%";
//		sql = "SELECT * FROM mealkit WHERE name LIKE '%?%'";
		// 얘 왜 구문오류라고 나오지?
		// '%?%' 따옴표 붙이면 length 어쩌구 오류
		// %?% 따옴표 없으면 SQL 구문오류 발생
		
		sql = "SELECT * FROM mealkit WHERE name LIKE CONCAT('%',?,'%')";
		List<ItemDTO> list = new ArrayList<ItemDTO>();
		
		
		try {
			pst = cn.prepareStatement(sql);
			pst.setString(1, name);
			rs = pst.executeQuery(); 
			if (rs.next()) {
				do {
					ItemDTO dto = new ItemDTO();
					
					dto.setSorta(rs.getString(1));
					dto.setSortb(rs.getString(2));
					dto.setSortc(rs.getString(3));
					dto.setSortd(rs.getString(4));
					dto.setCode(rs.getInt(5));
					dto.setMadeby(rs.getString(6));
					dto.setName(rs.getString(7));
					dto.setSize(rs.getInt(8));
					dto.setStoragetype(rs.getString(9));
					dto.setPackagetype(rs.getString(10));
					dto.setPrice(rs.getInt(11));

					list.add(dto);
				} while (rs.next());
				return list;
			} else {
				return null;
			}
		} catch (Exception e) {
			System.out.println("** selectList Exception => " + e.toString());
			return null;
		}
		
		
	}
}
