package com.ncs.spring02.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.stereotype.Service;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.ncs.spring02.domain.JoDTO;
import com.ncs.spring02.service.JoService;

@Controller
@RequestMapping(value="/jo")
public class JoController {
	@Autowired
	private JoService service;
	
	// joList
	@RequestMapping(value="/jolist")
	public void jolist(Model model) {
		model.addAttribute( "list" , service.joList());
	}
	// joDetail
	@RequestMapping(value="/jodetail")
	public void jolist(Model model, @RequestParam("jno") int jno) {
		model.addAttribute( "dto" , service.joDetail(jno));
	}
		
	// joInsert
	@RequestMapping(value="/joinsert")
	public void joinsert() {
	}
	@RequestMapping(value="/joInsert")
	public String joInsert(Model model,JoDTO dto) {
		service.joInsert(dto);
		model.addAttribute( "dto" , service.joList());
		return "jo/jolist";
	}
	
	// joUpdate

	// joDelete
}
